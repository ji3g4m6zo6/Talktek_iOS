# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'talkTek' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

# Pods for talkTek

# Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  pod 'Fabric', '~> 1.7.6'
  pod 'Crashlytics', '~> 3.10.1'
  

# Firebase/Facebook UI
  pod 'FirebaseUI/Facebook'

# Facebook
  pod 'Bolts'
  pod 'FBSDKCoreKit'
  pod ‘FBSDKShareKit’
  pod 'FBSDKLoginKit'

# Google
  pod 'GoogleSignIn'

# ObjectMapper
pod 'ObjectMapper', '~> 3.1'

# Kingfisher
pod 'Kingfisher', '~> 4.0'

# Keyboard not hide textfield
pod 'IQKeyboardManagerSwift'

# TextFieldEffect
pod 'TextFieldEffects'

# XLPager
pod 'XLPagerTabStrip', '~> 8.0'

# Stars
pod 'Cosmos', '~> 12.0'

# Date Picker
pod 'DatePickerCell', '~> 1.0'

# Alert
pod 'PopupDialog', '~> 0.6'

# In-App Purchase
pod 'SwiftyStoreKit'

# Pull To Refresh
pod "ESPullToRefresh"

# Snapkit
pod 'SnapKit', '~> 4.0.0'

# Indicator
pod 'SVProgressHUD'

# Transition
pod "ARNTransitionAnimator"

# Snapkit
pod 'SwiftyJSON', '~> 4.0'


  target 'talkTekTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'talkTekUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
